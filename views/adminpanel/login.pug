link(rel="stylesheet", href="/css/adminlogin.css")
link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
.container
    .row
        .col-lg-3.col-md-2
        .col-lg-6.col-md-8.login-box
            .col-lg-12.login-key
                i.fa.fa-key(aria-hidden='true')
            .col-lg-12.login-title
                | ADMIN PANEL
            .col-lg-12.login-form
                .col-lg-12.login-form
                    form
                        .form-group
                            label.form-control-label Kullanıcı Adı
                            input.form-control(type='text')
                        .form-group
                            label.form-control-label Şifre
                            input.form-control(type='password' i='')
                        .col-lg-12.loginbttm
                            .col-lg-6.login-btm.login-text
                                // Error Message
                            .col-lg-6.login-btm.login-button
                                button.btn.btn-outline-primary(type='submit') LOGIN
            .col-lg-3.col-md-2
